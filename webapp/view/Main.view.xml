<mvc:View
    controllerName="com.github.dfenerski.ui5_sample_ecd.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:md="cc.md"
    xmlns:ecdsample="com.github.dfenerski.ui5_sample_ecd.controls"
    core:require="{
		formatter: 'com/github/dfenerski/ui5_sample_ecd/model/formatter'
	}">
    <Page
        title="{i18n>appTitle}">
        <content>
            <Panel width="auto" height="500px" class="sapUiResponsiveMargin" accessibleRole="Region">
                <headerToolbar>
                    <OverflowToolbar>
                        <Button text="Force rerender" press=".handleForceRerender" />
                        <Button text="Add item" press=".handleItemAddition" />
                        <Button text="Remove item" press=".handleItemRemoval" />
                        <Button text="Reset model" press=".handleResetModel" />
                        <Button text="Reset logs" press=".handleResetLogger" />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <HBox justifyContent="Center">
                        <VBox>
                            <Title text="Renderer API Version 2" />
                            <HBox class="contentBox1">
                                <List backgroundDesign="Transparent" items="{logger>/v2/}"
                                    noDataText="Interact with the UI!">
                                    <CustomListItem>
                                        <MessageStrip
                                            text="{logger>message}"
                                            type="{logger>type}"
                                            showIcon="true">
                                        </MessageStrip>
                                    </CustomListItem>
                                    <layoutData>
                                        <FlexItemData
                                            minWidth="400px"
                                            maxWidth="400px"
                                        >
                                        </FlexItemData>
                                    </layoutData>
                                </List>
                                <ecdsample:ContainerV2
                                    id="containerV2"
                                    items="{path: 'local>/items', templateShareable: false}">
                                    <ecdsample:items>
                                        <ecdsample:ItemV2 text="{local>text}" />
                                    </ecdsample:items>
                                </ecdsample:ContainerV2>
                            </HBox>
                        </VBox>
                        <VBox>
                            <Title text="Renderer API Version 4" />
                            <HBox class="contentBox2">
                                <ecdsample:ContainerV4
                                    id="containerV4"
                                    items="{path: 'local>/items', templateShareable: false}">
                                    <ecdsample:items>
                                        <ecdsample:ItemV4 text="{local>text}" />
                                    </ecdsample:items>
                                </ecdsample:ContainerV4>
                                <List backgroundDesign="Transparent" items="{logger>/v4/}"
                                    noDataText="Interact with the UI!">
                                    <CustomListItem>
                                        <MessageStrip
                                            text="{logger>message}"
                                            type="{logger>type}"
                                            showIcon="true">
                                        </MessageStrip>
                                    </CustomListItem>
                                    <layoutData>
                                        <FlexItemData
                                            minWidth="400px"
                                            maxWidth="400px"
                                        >
                                        </FlexItemData>
                                    </layoutData>
                                </List>
                            </HBox>
                        </VBox>
                    </HBox>
                </content>
            </Panel>
            <Panel headerText="Documentation / Explanation" width="auto" height="500px"
                class="sapUiResponsiveMargin" accessibleRole="Region">
                <md:Markdown fromFile="./docs/info.md" />
            </Panel>
        </content>
    </Page>

</mvc:View>