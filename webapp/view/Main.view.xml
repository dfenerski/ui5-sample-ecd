<mvc:View
    controllerName="com.github.dfenerski.ui5_sample_ecd.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:ecdsample="com.github.dfenerski.ui5_sample_ecd.controls"
    core:require="{
		formatter: 'com/github/dfenerski/ui5_sample_ecd/model/formatter'
	}">

    <Page
        title="{i18n>appTitle}"
        id="page">
        <content>
            <ecdsample:Container items="{path: 'local>/items', templateShareable: false}">
                <ecdsample:items>
                    <ecdsample:Item text="{local>text}" />
                </ecdsample:items>
            </ecdsample:Container>
            <Button text="Add item" press=".handleItemAddition" />
            <Button text="Remove item" press=".handleItemRemoval" />
        </content>
    </Page>

</mvc:View>